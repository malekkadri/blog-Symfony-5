{% extends 'base-admin.html.twig' %}

{% block title %}{{ site_name }}: {{ category.title }}{% endblock %}

{% block body %}
<main id="main">

    <!-- ======= Blog Section ======= -->
    <section class="breadcrumbs">
        <div class="container">

            <div class="d-flex justify-content-between align-items-center">
                <h2>{% trans %}Category{% endtrans %}</h2>

                <ol>
                    <li><a href="{{ path('home') }}">{% trans %}Home{% endtrans %}</a></li>
                    <li><a href="{{ path('admin') }}">Admin</a></li>
                    <li><a href="{{ path('category_admin_index') }}">{% trans %}Category{% endtrans %}</a></li>
                    <li>{{ category.title }}</li>
                </ol>
            </div>

        </div>
    </section><!-- End Blog Section -->

    <!-- ======= Blog Section ======= -->
    <section id="blog" class="blog">
        <div class="container" data-aos="fade-up">
            <div class="row py-5">
                <div class="col mb-4">
                    <h1>{% trans %}Edit Category{% endtrans %}: {{ category.title }}</h1>
                    {{ include('category/_form.html.twig', {'button_label': 'Update'}) }}
                </div>
            </div>
        </div>
    </section>
</main>
{% endblock %}