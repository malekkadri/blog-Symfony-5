{% extends 'base-admin.html.twig' %}

{% block title %}{{ site_name }}: {% trans %}new category{% endtrans %}{% endblock %}

{% block body %}
<main id="main">

    <!-- ======= Blog Section ======= -->
    <section class="breadcrumbs">
        <div class="container">

            <div class="d-flex justify-content-between align-items-center">
                <h2>{% trans %}Category{% endtrans %}</h2>

                <ol>
                    <li><a href="{{ path('home') }}">{% trans %}Home{% endtrans %}</a></li>
                    <li><a href="{{ path('admin') }}">Admin</a></li>
                    <li>{% trans %}New category{% endtrans %}</li>
                </ol>
            </div>

        </div>
    </section><!-- End Blog Section -->

    <!-- ======= Blog Section ======= -->
    <section id="blog" class="blog">
        <div class="container" data-aos="fade-up">

            <div class="row py-5">

                <div class="col mb-4">
                    <h1>{% trans %}Create new Category{% endtrans %}</h1>

                    {{ include('category/_form.html.twig') }}

                </div>
            </div>
        </div>
    </section>
</main>
{% endblock %}