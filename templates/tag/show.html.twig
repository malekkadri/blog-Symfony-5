{% extends 'base.html.twig' %}

{% block title %}{{ site_name }}: {{ tag.title }}{% endblock %}

{% block body %}
<main id="main">

    <!-- ======= Blog Section ======= -->
    <section class="breadcrumbs">
        <div class="container">

            <div class="d-flex justify-content-between align-items-center">
                <h2>Tag</h2>

                <ol>
                    <li><a href="{{ path('home') }}">{% trans %}Home{% endtrans %}</a></li>
                    <li><a href="{{ path('tag_index') }}">Tag</a></li>
                    <li>{{ tag.title }}</li>
                </ol>
            </div>

        </div>
    </section><!-- End Blog Section -->

    <!-- ======= Blog Section ======= -->
    <section id="blog" class="blog">
        <div class="container" data-aos="fade-up">

            <div class="row d-flex justify-content-center mb-5">
                <div class="col">
                    <h1>{{ tag.title }}</h1>

                    <p>{% trans %}Tag's articles{% endtrans %}</p>
                    {% for t in tag.article %}
                        <div class="row py-1">
                            <div class="col">
                                <i class="bi bi-arrow-down-right-square-fill"></i> <a href="{{ path('article_show', { 'slug': t.slug }) }}">{{ t.title }}</a>
                            </div>
                        </div>
                    {% endfor %}

                </div>
            </div>
        </div>
    </section>
</main>
{% endblock %}