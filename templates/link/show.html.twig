{% extends 'base.html.twig' %}

{% block title %}Link{% endblock %}

{% block body %}
<main id="main">

    <!-- ======= Blog Section ======= -->
    <section class="breadcrumbs">
        <div class="container">

            <div class="d-flex justify-content-between align-items-center">
                <h2>{% trans %}Contact{% endtrans %}</h2>

                <ol>
                    <li><a href="{{ path('home') }}">{% trans %}Home{% endtrans %}</a></li>
                    <li>{% trans %}Contact{% endtrans %}</li>
                </ol>
            </div>

        </div>
    </section><!-- End Blog Section -->

    <!-- ======= Blog Section ======= -->
    <section id="blog" class="blog">
        <div class="container" data-aos="fade-up">

            <div class="row d-flex justify-content-center mb-5">
                <div class="col">
                    <h2>Link</h2>

                    <table class="table">
                        <tbody>
                            <tr>
                                <th>Id</th>
                                <td>{{ link.id }}</td>
                            </tr>
                            <tr>
                                <th>Title</th>
                                <td>{{ link.title }}</td>
                            </tr>
                            <tr>
                                <th>Url</th>
                                <td>{{ link.url }}</td>
                            </tr>
                            <tr>
                                <th>Presentation</th>
                                <td>{{ link.presentation }}</td>
                            </tr>
                        </tbody>
                    </table>

                    <a href="{{ path('link_index') }}">back to list</a>

                    <a href="{{ path('link_edit', {'id': link.id}) }}">edit</a>

                    {{ include('link/_delete_form.html.twig') }}
                </div>
            </div>
        </div>
    </section>
</main>
{% endblock %}